# Ansible template for sshd_config folder

Include /etc/ssh/sshd_config.d/*.conf
AuthorizedKeysFile      .ssh/authorized_keys
Subsystem       sftp    /usr/libexec/openssh/sftp-server

PermitRootLogin {{ sshd_permit_root_login | default('no') }}
MaxAuthTries {{ sshd_max_auth_tries | default(3) }}
LoginGraceTime {{ sshd_login_grace_time | default('15s') }}
PermitEmptyPasswords {{ sshd_permit_empty_passwords | default('no') }}
X11Forwarding {{ sshd_x11_forwarding | default('no') }}
AllowAgentForwarding {{ sshd_allow_agent_forwarding | default('no') }}
AllowTcpForwarding {{ sshd_allow_tcp_forwarding | default('no') }}





